<h1>{{#if jogo}}Atualizar Jogo{{else}}Cadastrar Jogo{{/if}}</h1>

<form action="{{#if jogo}}/jogos/{{jogo.id}}/update{{else}}/jogos/novo{{/if}}" method="post" class="mt-4">
  <div class="mb-3">
    <label for="titulo" class="form-label">Título</label>
    <input type="text" id="titulo" name="titulo" value="{{jogo.titulo}}" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="descricao" class="form-label">Descrição</label>
    <input type="text" id="descricao" name="descricao" value="{{jogo.descricao}}" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="precobase" class="form-label">Preço Base</label>
    <input type="number" id="precobase" name="precobase" value="{{jogo.precobase}}" class="form-control" />
  </div>
  <button type="submit" class="btn btn-success">{{#if jogo}}Salvar{{else}}Cadastrar{{/if}}</button>
</form>